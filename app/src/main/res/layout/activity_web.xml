<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground"
    android:orientation="vertical"
    tools:context=".module.main.activity.MainActivity">

    <per.goweii.actionbarex.ActionBarEx
        android:id="@+id/ab"
        style="@style/ActionBar"
        app:ab_titleBarLayout="@layout/action_bar_web" />

    <per.goweii.wanandroid.widget.WebContainer
        android:id="@+id/wc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:background="?colorSurface"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thin"
            android:background="?colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <per.goweii.actionbarex.common.ActionIconView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_def"
                android:layout_marginEnd="@dimen/margin_def"
                android:background="@drawable/bg_press_color_surface_radius_max"
                android:padding="15.5dp"
                android:src="@drawable/ic_close"
                android:tint="?colorIconSurface" />

            <per.goweii.actionbarex.common.ActionIconView
                android:id="@+id/iv_menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_def"
                android:layout_marginEnd="@dimen/margin_def"
                android:background="@drawable/bg_press_color_surface_radius_max"
                android:padding="15.5dp"
                android:src="@drawable/ic_menu"
                android:tint="?colorIconSurface" />

            <per.goweii.actionbarex.common.ActionIconView
                android:id="@+id/iv_forward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_def"
                android:layout_marginEnd="@dimen/margin_def"
                android:background="@drawable/bg_press_color_surface_radius_max"
                android:padding="15.5dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                android:tint="?colorIconSurface" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>